// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 枚举定义
enum RoleType {
  ADMIN // 管理员
  MERCHANT // 商家
  CUSTOMER // 客户

  @@map("role_type")
}

enum RoleStatus {
  ACTIVE // 激活
  INACTIVE // 未激活
  SUSPENDED // 暂停

  @@map("role_status")
}

enum AuthProvider {
  USERNAME_PASSWORD // 用户名+密码
  EMAIL_PASSWORD // 邮箱+密码
  PHONE_PASSWORD // 手机号+密码
  EMAIL_CODE // 邮箱+验证码
  PHONE_CODE // 手机号+验证码
  FACEBOOK // Facebook登录
  GOOGLE // Google登录

  @@map("auth_provider")
}

enum MerchantVerifyStatus {
  PENDING // 待审核
  VERIFIED // 已验证
  REJECTED // 已拒绝
  SUSPENDED // 已暂停

  @@map("merchant_verify_status")
}

enum Gender {
  MALE // 男性
  FEMALE // 女性
  OTHER // 其他

  @@map("gender")
}

// 核心用户表 - 存储通用用户信息
model User {
  id          Int       @id @default(autoincrement())
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")
  lastLoginAt DateTime? @map("last_login_at")

  // 关联关系
  credentials AuthCredential? // 认证凭证（一对一）
  roles       UserRole[] // 用户角色（一对多）

  @@index([createdAt])
  @@index([lastLoginAt])
  @@map("users")
}

// 用户角色表 - 作为角色枢纽
model UserRole {
  id        Int        @id @default(autoincrement())
  userId    Int        @map("user_id")
  roleType  RoleType   @map("role_type")
  status    RoleStatus @default(ACTIVE)
  createdAt DateTime   @default(now()) @map("created_at")
  expiresAt DateTime?  @map("expires_at")

  // 关联具体角色信息（互斥）
  merchant Merchant?
  customer Customer?
  admin    Admin?

  // 关联用户
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  // 唯一约束：确保用户每种角色唯一
  @@unique([userId, roleType])
  // 索引优化
  @@index([userId])
  @@index([roleType])
  @@index([status])
  @@index([roleType, status]) // 复合索引
  @@map("user_roles")
}

// 认证凭证表 - 存储所有身份标识符
model AuthCredential {
  id     Int @id @default(autoincrement())
  userId Int @unique @map("user_id") // 一对一关联用户

  // 身份标识符 - 全局唯一
  username   String? @unique
  email      String? @unique
  phone      String? @unique
  facebookId String? @unique @map("facebook_id")
  googleId   String? @unique @map("google_id")

  // 密码管理
  hashedPassword String? @map("hashed_password")

  // 验证状态
  isEmailVerified    Boolean @default(false) @map("is_email_verified")
  isPhoneVerified    Boolean @default(false) @map("is_phone_verified")
  isFacebookVerified Boolean @default(false) @map("is_facebook_verified")
  isGoogleVerified   Boolean @default(false) @map("is_google_verified")

  // 安全时间戳
  lastLoginAt     DateTime? @map("last_login_at")
  passwordChanged DateTime? @map("password_changed_at")

  // 时间戳
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // 关联关系
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  // 索引优化 - 移除重复的复合索引
  @@index([email])
  @@index([phone])
  @@index([username])
  @@index([facebookId])
  @@index([googleId])
  @@map("auth_credentials")
}

// 商家信息表
model Merchant {
  id                 Int                  @id @default(autoincrement())
  userRoleId         Int                  @unique @map("user_role_id")
  businessName       String               @map("business_name")
  businessLicense    String?              @map("business_license")
  contactPerson      String               @map("contact_person")
  businessAddress    String?              @map("business_address")
  businessType       String?              @map("business_type")
  verificationStatus MerchantVerifyStatus @default(PENDING) @map("verification_status")
  businessPhone      String?              @map("business_phone")
  businessEmail      String?              @map("business_email")
  createdAt          DateTime             @default(now()) @map("created_at")
  updatedAt          DateTime             @updatedAt @map("updated_at")

  // 关联关系
  userRole UserRole @relation(fields: [userRoleId], references: [id], onDelete: Cascade)

  // 索引优化
  @@index([businessName])
  @@index([contactPerson])
  @@index([verificationStatus])
  @@index([businessType])
  @@index([createdAt])
  @@map("merchants")
}

// 客户信息表
model Customer {
  id               Int       @id @default(autoincrement())
  userRoleId       Int       @unique @map("user_role_id")
  realName         String?   @map("real_name")
  idCard           String?   @unique @map("id_card")
  birthDate        DateTime? @map("birth_date") @db.Date
  gender           Gender?
  preferences      Json?
  address          String?
  emergencyContact String?   @map("emergency_contact")
  createdAt        DateTime  @default(now()) @map("created_at")
  updatedAt        DateTime  @updatedAt @map("updated_at")

  // 关联关系
  userRole UserRole @relation(fields: [userRoleId], references: [id], onDelete: Cascade)

  // 索引优化
  @@index([realName])
  @@index([gender])
  @@index([birthDate])
  @@index([idCard])
  @@index([createdAt])
  @@map("customers")
}

// 管理员信息表
model Admin {
  id         Int       @id @default(autoincrement())
  userRoleId Int       @unique @map("user_role_id")
  employeeId String    @unique @map("employee_id") // 员工编号
  hireDate   DateTime? @map("hire_date") @db.Date // 入职日期
  isActive   Boolean   @default(true) @map("is_active") // 是否在职
  createdAt  DateTime  @default(now()) @map("created_at")
  updatedAt  DateTime  @updatedAt @map("updated_at")

  // 关联关系
  userRole UserRole @relation(fields: [userRoleId], references: [id], onDelete: Cascade)

  // 索引优化
  @@index([employeeId])
  @@index([isActive])
  @@index([hireDate])
  @@map("admins")
}
